<h1 class="top_header">Listing Books</h1>

<div class="row">
  <div class="col-md-3">
    <ul class="list-group no-list-style">
      <li><%= link_to '購物中', new_book_path, class:'list-group-item active' %></li>
      <li><%= link_to '新增', new_book_path, class:'list-group-item' %></li>
      <li class="list-group-item"><%= link_to '其它1' %></li>
      <li class="list-group-item"><%= link_to '其它2' %></li>
      <li class="list-group-item"><%= link_to '其它3' %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <!-- book item -->
    <% @books.each do |book| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <img src="http://fakeimg.pl/300/" alt="...">
          <div class="caption">
            <h3><%= book.title %></h3>
            <p><%= book.description %></p>
            <p><%= book.price %></p>
            <p><a href="#" class="btn btn-primary" role="button">加入購物車</a></p>
          </div>
        </div>
      </div>
    <% end %>
    <!-- book item -->
  </div>
</div>

